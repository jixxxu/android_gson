<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="70dp"
            android:gravity="left"
            android:text="회원정보를 입력해주세요."
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/signName"
            android:layout_width="334dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/header"
            android:hint="이름"
            android:inputType="textPersonName"
            android:text=""
            android:paddingLeft="10dp"
            />

        <EditText
            android:id="@+id/id"
            android:layout_width="334dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="160dp"
            android:background="@drawable/header"
            android:hint="아이디"
            android:inputType="text"
            android:text=""
            android:paddingLeft="10dp"
            />

        <EditText
            android:id="@+id/password"
            android:layout_width="334dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="210dp"
            android:background="@drawable/header"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:text=""
            android:paddingLeft="10dp"
            />

        <EditText
            android:id="@+id/passwordcheck"
            android:layout_width="334dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="260dp"
            android:background="@drawable/header"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            android:text=""
            android:paddingLeft="10dp"
            />

        <EditText
            android:id="@+id/number"
            android:layout_width="233dp"
            android:layout_height="43dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="310dp"
            android:background="@drawable/header"
            android:hint="전화번호"
            android:inputType="text|number"
            android:text=""
            android:paddingLeft="10dp"
            />

        <EditText
            android:id="@+id/confirm_button"
            android:layout_width="233dp"
            android:layout_height="44dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="360dp"
            android:background="@drawable/header"
            android:hint="본인인증 번호"
            android:inputType="text|number"
            android:text=""
            android:paddingLeft="10dp"
            />

        <Button
            android:layout_width="90dp"
            android:layout_height="38dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="313dp"
            android:background="@drawable/headercircle"
            android:text="본인인증" />

        <Button
            android:layout_width="90dp"
            android:layout_height="38dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="363dp"
            android:background="@drawable/headercircle"
            android:text="인증하기" />

        <TextView
            android:id="@+id/havecode3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="409dp"
            android:text="코드를 못받으셨나요?"
            android:textStyle="bold" />

        <Button
            android:id="@+id/havecode4"
            android:layout_width="137dp"
            android:layout_height="35dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="403dp"
            android:text="코드 다시보내기"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/allagree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="430dp"
            android:padding="40dp"
            android:paddingLeft="40dp"
            android:text="전체 동의하기"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="455dp"
            android:onClick="onCheckboxClicked" />

        <View
            android:layout_width="370dp"
            android:layout_height="2px"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="500dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/essential1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="520dp"
            android:text="필수"
            android:textColor="#029AFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/essential2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="560dp"
            android:text="필수"
            android:textColor="#029AFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/essential3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="600dp"
            android:text="선택"
            android:textColor="#029AFF"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="510dp"
            android:onClick="onCheckboxClicked" />


        <TextView
            android:id="@+id/agree1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="520dp"
            android:text="이용약관 동의  >"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/agree2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="560dp"
            android:text="개인정보 수집 및 이용동의  >"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkbox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="549dp"
            android:onClick="onCheckboxClicked" />

        <TextView
            android:id="@+id/agree3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="600dp"
            android:text="SMS 광고성 정보 수신동의  >"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkbox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="590dp"
            android:onClick="onCheckboxClicked" />

        <TextView
            android:id="@+id/agree4"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="620dp"
            android:text="다양한 프로모션 소식을 보내 드립니다."
            android:textSize="10dp" />

        <Button
            android:id="@+id/next"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="665dp"
            android:background="@drawable/bluecircle"
            android:gravity="center"
            android:text="다음"
            android:textColor="#029AFF" />

    </FrameLayout>
    </ScrollView>
</FrameLayout>