<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:background="#FFFFFF">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="31dp"
        android:text="회원정보를 입력해주세요."
        android:textStyle="bold"
        android:textSize="16dp"
        android:gravity="left"
        android:textColor="@android:color/black"
        />

    <EditText
        android:id="@+id/signName"
        android:layout_width="334dp"
        android:layout_height="40dp"
        android:background="@drawable/header"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="30dp"
        android:hint="이름"
        android:inputType="textPersonName"

        android:paddingLeft="10dp"
        />

    <EditText
        android:id="@+id/idfirst"
        android:layout_width="334dp"
        android:layout_height="40dp"
        android:background="@drawable/header"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="30dp"
        android:hint="아이디"
        android:inputType="text"

        android:paddingLeft="10dp"
        />

    <EditText
        android:id="@+id/passwordfirst"
        android:layout_width="334dp"
        android:layout_height="40dp"
        android:background="@drawable/header"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="30dp"
        android:hint="비밀번호"
        android:inputType="textPassword"

        android:paddingLeft="10dp"
        />

    <EditText
        android:id="@+id/passwordcheckfirst"
        android:layout_width="334dp"
        android:layout_height="40dp"
        android:background="@drawable/header"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="30dp"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"

        android:paddingLeft="10dp"
        />

    <EditText
        android:id="@+id/numberfirst"
        android:layout_width="233dp"
        android:layout_height="43dp"
        android:background="@drawable/header"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="30dp"
        android:hint="전화번호"
        android:inputType="phone"

        android:paddingLeft="10dp"
        />

    <EditText
        android:id="@+id/confirm_buttonfirst"
        android:layout_width="233dp"
        android:layout_height="44dp"
        android:background="@drawable/header"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="30dp"
        android:hint="본인인증 번호"
        android:inputType="text|number"

        android:paddingLeft="10dp"
        />

    <Button
        android:id="@+id/numcheck"
        android:layout_width="90dp"
        android:layout_height="38dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="313dp"
        android:background="@drawable/headercirclegray"
        android:text="본인인증"
        />

        <Button
            android:id="@+id/checkcheck"
            android:layout_width="90dp"
            android:layout_height="38dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="363dp"
            android:background="@drawable/headercirclegray"
            android:text="인증하기"
            />
        <TextView
            android:id="@+id/havecode5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="409dp"
            android:layout_marginLeft="40dp"
            android:text="코드를 못받으셨나요?"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/havecode6"
            android:layout_width="137dp"
            android:layout_height="35dp"
            android:layout_marginTop="403dp"
            android:layout_marginLeft="170dp"
            android:text="코드 다시보내기"
            android:textStyle="bold"
            android:background="@drawable/none"
            />



        <TextView
            android:id="@+id/allagree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="430dp"
            android:padding="40dp"
            android:paddingLeft="40dp"
            android:text="전체 동의하기"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            />

        <CheckBox
        android:id="@+id/checkbox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="455dp"
        android:layout_marginLeft="320dp"
        android:onClick="onCheckboxClicked" />

    <View
        android:layout_width="370dp"
        android:layout_height="2px"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="18dp"
        android:background="@color/black"
        />

    <TextView
        android:id="@+id/essential1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="38dp"
        android:text="필수"
        android:textColor="#029AFF"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/essential2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="560dp"
        android:layout_marginLeft="38dp"
        android:text="필수"
        android:textColor="#029AFF"
        android:textStyle="bold"
        />

        <TextView
            android:id="@+id/essential3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="600dp"
            android:layout_marginLeft="38dp"
            android:text="선택"
            android:textColor="#029AFF"
            android:textStyle="bold"
            />

        <CheckBox
            android:id="@+id/checkbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="510dp"
            android:layout_marginLeft="320dp"
            android:onClick="onCheckboxClicked" />



    <TextView
        android:id="@+id/agree1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="80dp"
        android:text="이용약관 동의  >"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/agree2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="560dp"
        android:layout_marginLeft="80dp"
        android:text="개인정보 수집 및 이용동의  >"
        android:textStyle="bold"
        />

    <CheckBox
        android:id="@+id/checkbox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="549dp"
        android:layout_marginLeft="320dp"
        android:onClick="onCheckboxClicked" />

    <TextView
        android:id="@+id/agree3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="80dp"
        android:text="SMS 광고성 정보 수신동의  >"
        android:textStyle="bold"
        />

    <CheckBox
        android:id="@+id/checkbox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="590dp"
        android:layout_marginLeft="320dp"
        android:onClick="onCheckboxClicked"/>

    <TextView
        android:id="@+id/agree4"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="620dp"
        android:layout_marginLeft="80dp"
        android:text="다양한 프로모션 소식을 보내 드립니다."
        android:textSize="10dp"
        />

        <Button
            android:id="@+id/nextfirst"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="665dp"
            android:background="@drawable/bluecircle"
            android:text="다음"
            android:textColor="#029AFF"
            android:gravity="center"
            />
    </FrameLayout>
    </ScrollView>
